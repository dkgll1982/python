{
    "python.testing.unittestArgs": [
        "-v",
        "-s",
        ".",
        "-p",
        "*test.py"
    ],
    "python.testing.pytestEnabled": false,
    "python.testing.nosetestsEnabled": false,
    "python.testing.unittestEnabled": false,
    "python.testing.promptToConfigure": false, 
    "python.languageServer": "Microsoft",
    "python.autoComplete.addBrackets": true,
    
     //-------- Search configuration --------

    // Configure glob patterns for excluding files and folders in searches. Inherits all glob patterns from the files.exclude setting.
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true
    },

    //-------- Files configuration --------

    // Configure glob patterns for excluding files and folders.
    //vscode中设置工作区隐藏文件或文件夹
    //https://www.jianshu.com/p/8856c99d13b5?utm_campaign
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true, 
        "**/.DS_Store": true,
        "**/node_modules": true,
        "**/iOS": true,
        "**/backup": true,            //隐藏目录
        "**/__pycache__": true,       //隐藏目录 
        "**/pip3": true,              //隐藏目录 
        "**/build": true,             //隐藏目录 
        "**/dist": true,              //隐藏目录 
    }, 
    "guides.indent.hideBackgroundOnSelection": false,
    "fileheader.Author": "suixin",
    "fileheader.LastModifiedBy": "suixin",
    "fileheader.tpl": "#!/usr/bin/env python \r\n# -*- coding:utf-8 -*-  \r\n# @Author: {author} \r\n# @Company: Aerospace Shenzhou Intelligent System Technology Co., Ltd  \r\n# @Site: https://user.qzone.qq.com/350606539/main \r\n# @Date: {createTime} \r\n# @Remark: Life is short, I use python！ \r\n# @Software: vscode ",
    
    "remote.SSH.showLoginTerminal": true,
    "git.ignoreLegacyWarning": true,
    "terminal.integrated.shell.linux": "/bin/sh",

    "bracket-pair-colorizer-2.colors": [
        "Gold",
        "Orchid",
        "LightSkyBlue"
    ],
}